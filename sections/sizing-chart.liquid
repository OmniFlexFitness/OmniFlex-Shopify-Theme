{% assign csv_data = "Size,Chest,Length\nXS,33.1 in,28.75 in\nS,34.6 in,29.5 in\nM,36.3 in,30.25 in\nL,39.4 in,31.875 in\nXL,42.5 in,33.5 in\n2XL,45.6 in,35 in" %}

{% assign header_color = "#007acc" %}
{% assign row_color = "#2a2a2a" %}
{% assign text_color = "#ffffff" %}
{% assign background_color = "#1e1e1e" %}

<table style="border-collapse: collapse; width: 90%; text-align: center; font-family: Arial, sans-serif; background-color: {{ background_color }}; color: {{ text_color }}; margin-left: 5%; margin-right: 5%;">
    {% assign rows = csv_data | split: "\n" %}
    {% for row in rows %}
        {% assign columns = row | split: "," %}
        {% if forloop.first %}
            <thead>
                <tr style="background-color: {{ header_color }};">
                    {% for column in columns %}
                        <th style="border: 1px solid #444; padding: 10px; color: {{ text_color }};">{{ column }}</th>
                    {% endfor %}
                </tr>
            </thead>
        </thead>
        <tbody>
    {% else %}
        <tr style="background-color: {% if forloop.index0 | modulo: 2 == 0 %}{{ background_color }}{% else %}{{ row_color }}{% endif %};">
            {% for column in columns %}
                <td style="border: 1px solid #444; padding: 10px;">{{ column }}</td>
            {% endfor %}
        </tr>
        </tbody>
    {% endif %}
 
{% endfor %}

</table>